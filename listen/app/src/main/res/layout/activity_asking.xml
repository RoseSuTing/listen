<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.listen.askingActivity">
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/background"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/circle" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="130dp"
        android:text="00:00:02"
        android:textSize="30dp"
        android:textColor="@android:color/black"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/voice" />
    <ImageView
        android:id="@+id/img_said"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/micro"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="140dp"
        android:onClick="start"/>
    <ImageView
        android:id="@+id/img_stop_said"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stop_said"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="140dp"
        android:onClick="stop"/>
    <Button
        android:id="@+id/but_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="260dp"
        android:onClick="save"/>

</RelativeLayout>
