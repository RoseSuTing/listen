<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.listen.MainOptionActivity"
    tools:showIn="@layout/app_bar_second">

    <ImageView
        android:id="@+id/second_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/style_b"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView_second"
            android:layout_width="match_parent"
            android:layout_height="430dp">
        </ListView>

        <ImageView
            android:id="@+id/img"
            android:layout_width="101dp"
            android:layout_height="129dp"
            android:layout_marginLeft="135dp"
            android:onClick="butClick"
            android:scaleType="fitXY" />

    </LinearLayout>

</RelativeLayout>
