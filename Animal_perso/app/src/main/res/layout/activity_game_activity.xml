<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_green"
    tools:context="com.example.administrator.animal.game_activity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="TextView"
        android:textSize="30dp"
        android:onClick="onClick"
        android:background="@drawable/bg_blue"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="50dp">
    <ImageView
        android:id="@+id/image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/cat"
        android:onClick="onClick"/>
    <ImageView
        android:id="@+id/image1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/elephant"
    android:layout_marginLeft="50dp"
        android:onClick="onClick"/>
    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/honey"
        android:layout_marginLeft="50dp"
        android:onClick="onClick"/>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="50dp">

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lion"
        android:onClick="onClick"/>
    <ImageView
        android:id="@+id/image4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bear"
        android:layout_marginLeft="50dp"
        android:onClick="onClick"/>
    <ImageView
        android:id="@+id/image5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/giraffe"
        android:layout_marginLeft="50dp"
        android:onClick="onClick"/>

</LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="263dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:text="SCORE:"
        android:textSize="50dp" />

</LinearLayout>
